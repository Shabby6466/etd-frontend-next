{
  "name": "etd-electron",
  "version": "1.0.0",
  "description": "Emergency Travel Document Electron App",
  "main": "main.js",
  "scripts": {
    "start": "npx electron .",
    "start:admin": "npx electron . --no-sandbox --disable-web-security --disable-features=VizDisplayCompositor",
    "start:secugen": "npx electron . --no-sandbox --disable-web-security --disable-features=VizDisplayCompositor --enable-experimental-web-platform-features",
    "dev": "concurrently \"npm run dev:web\" \"wait-on http://localhost:3002 && npx electron . --dev --no-sandbox --disable-web-security --disable-features=VizDisplayCompositor\"",
    "dev:web": "webpack serve --mode development",
    "build:web": "webpack --mode production",
    "build": "npm run build:web && electron-builder",
    "build:win": "npm run build:web && electron-builder --win",
    "build:mac": "npm run build:web && electron-builder --mac",
    "build:linux": "npm run build:web && electron-builder --linux"
  },
  "author": "ETD Team",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.0",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^6.8.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "html-webpack-plugin": "^5.5.3",
    "path-browserify": "^1.0.1",
    "postcss-loader": "^7.3.3",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.4.4",
    "typescript": "^5.0.0",
    "util": "^0.12.5",
    "wait-on": "^7.0.1",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.0.0",
    "lucide-react": "^0.263.1",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "tailwindcss": "^3.4.17",
    "zod": "^3.22.4"
  },
  "build": {
    "appId": "com.etd.electron",
    "productName": "ETD Application",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "app",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "dir"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "compression": "store",
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "forceCodeSigning": false,
    "asar": true,
    "asarUnpack": [
      "node_modules/**/*"
    ],
    "buildDependenciesFromSource": false,
    "removePackageScripts": true
  }
}
