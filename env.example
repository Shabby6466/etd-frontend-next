# Environment Configuration Example
# Copy this file to .env.local and update the values

# ===========================================
# API Configuration
# ===========================================
# Main API base URL (used by frontend to communicate with backend)
NEXT_PUBLIC_API_URL=http://localhost:3836/v1/api

# Backend URL (for server-side operations)
BACKEND_URL=http://localhost:3836/v1/api

# ===========================================
# External API URLs
# ===========================================
# NADRA API endpoint
NADRA_API_URL=https://api.nadra.gov.pk/v1

# Passport API endpoint  
PASSPORT_API_URL=https://api.passport.gov.pk/v1

# ===========================================
# Authentication & Security
# ===========================================
# JWT secret key for token signing/verification
JWT_SECRET=your-super-secure-jwt-secret-key-here

# ===========================================
# Database Configuration
# ===========================================
# Database connection string
DATABASE_URL=postgresql://username:password@localhost:5432/etd_database

# ===========================================
# Application Settings
# ===========================================
# Environment mode
NODE_ENV=development

# Application port (for development)
PORT=3000

# ===========================================
# File Upload Configuration
# ===========================================
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=10485760

# Allowed file types for uploads
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png

# ===========================================
# Logging Configuration
# ===========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ===========================================
# CORS Configuration
# ===========================================
# Allowed origins for CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================================
# Rate Limiting
# ===========================================
# API rate limit (requests per minute)
RATE_LIMIT_REQUESTS=100

# ===========================================
# Cache Configuration
# ===========================================
# Redis URL for caching (optional)
REDIS_URL=redis://localhost:6379

# Cache TTL in seconds
CACHE_TTL=3600
